@page "{id:int?}"
@model SWAPI.Pages.FilmsModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SWAPI - Film Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="custom-body">
    <div class="container mt-4">
        <h1 class="text-center">Filme Star Wars: @Model.CurrentFilm?.Title</h1>

        @if (Model.CurrentFilm != null)
        {
            <div class="card custom-card">
                <div class="card-body">
                    <h3>@Model.CurrentFilm.Title</h3>
                    <p><strong>Release Date:</strong> @Model.CurrentFilm.ReleaseDate</p>
                    <p><strong>Director:</strong> @Model.CurrentFilm.Director</p>
                    <p><strong>Producers:</strong> @Model.CurrentFilm.Producer</p>
                    <p><strong>Opening Crawl:</strong> @Model.CurrentFilm.OpeningCrawl</p>

                    <div class="mt-3">
                        <h5>Species:</h5>
                        <ul class="custom-list">
                            @foreach (var species in Model.CurrentFilm.SpeciesDetails)
                            {
                                <li>@species.Name</li>
                            }
                        </ul>
                    </div>

                    <div class="mt-3">
                        <h5>Starships:</h5>
                        <ul class="custom-list">
                            @foreach (var starship in Model.CurrentFilm.StarshipsDetails)
                            {
                                <li>@starship.Name</li>
                            }
                        </ul>
                    </div>

                    <div class="mt-3">
                        <h5>Vehicles:</h5>
                        <ul class="custom-list">
                            @foreach (var vehicle in Model.CurrentFilm.VehiclesDetails)
                            {
                                <li>@vehicle.Name</li>
                            }
                        </ul>
                    </div>

                    <div class="mt-3">
                        <h5>Planets:</h5>
                        <ul class="custom-list">
                            @foreach (var planet in Model.CurrentFilm.PlanetsDetails)
                            {
                                <li>@planet.Name</li>
                            }
                        </ul>
                    </div>

                    <div class="mt-3">
                        <h5>Characters:</h5>
                        <ul class="custom-list">
                            @foreach (var character in Model.CurrentFilm.CharactersDetails)
                            {
                                <li>@character.Name</li>
                            }
                        </ul>
                    </div>

                    <div class="mt-3">
                        <a href="@Url.Page("/Films", new { id = Model.CurrentFilmIndex - 1 })" class="btn btn-primary">Previous Film</a>
                        <a href="@Url.Page("/Films", new { id = Model.CurrentFilmIndex + 1 })" class="btn btn-primary">Next Film</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p>No film details available.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>